%header
	%span.logo= image_tag("FRlogo.png", alt: "Front Rush")
	%span.title FOOSBALL
	%span.quote "The greatest show on Earth..."
%body
	#container_left
		%h1.players Player Rankings
		%ul.players_container
			%li.player_row
				%span.name.header Name
				%span.record.header Record
				%span.ELO.header Rating
			-Player.all.each do |p|
				%li.player_row
					%span.name=p.name
					%span.record="#{p.wins} - #{p.losses}"
					%span.ELO=p.ELO_rating
	#p.add_player=link_to "* Don't see yourself listed? Add yourself!", new_player_path
	#container_right
		%p.add_new_game=link_to "Add a new game here!", new_game_path